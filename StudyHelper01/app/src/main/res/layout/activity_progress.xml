<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F7FF"
        tools:context=".Progress">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="271dp"
            android:layout_height="40dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_extralight"
            android:text=" - Math addition"
            android:textAlignment="viewStart"
            android:textColor="#0C0909"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Progress:"
            android:textColor="#3399FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Switch child profiles"
            android:textColor="#020101"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.765"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="85dp"
            app:cardBackgroundColor="#8600B3"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ben" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="42dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Ben"
            android:textColor="#020101"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cardViewBen"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGwen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="#ABC4FF"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gwen" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="61dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Gwen"
            android:textColor="#020101"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cardViewGwen"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Done today:"
            android:textColor="#3399FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewBen" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="277dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Mistakes and questions:"
            android:textColor="#3399FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Left to do:"
            android:textColor="#3399FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Difficulties:"
            android:textColor="#3399FF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="410dp"
            android:layout_height="243dp"

            android:layout_marginTop="25dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView29"
            app:srcCompat="@drawable/progress" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="271dp"
            android:layout_height="112dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_extralight"
            android:text=" - Math lesson \n - Math exercise \n - Math test"
            android:textAlignment="viewStart"
            android:textColor="#0C0909"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView24" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="273dp"
            android:layout_height="110dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_extralight"
            android:padding="15dp"
            android:text=" - Two mistakes on Math test \n - One question during lesson"
            android:textAlignment="viewStart"
            android:textColor="#0C0909"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="270dp"
            android:layout_height="110dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_extralight"
            android:padding="15dp"
            android:text=" - Math correction \n -English lesson \n - English exercise \n - English test"
            android:textAlignment="viewStart"
            android:textColor="#0C0909"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView2"
            android:layout_width="419dp"
            android:layout_height="65dp"
            android:background="#8600B3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView30">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/personwhite" />

            <ImageView
                android:id="@+id/progress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="328dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/progressbluepng" />

            <ImageView
                android:id="@+id/content"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/readwhite" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>