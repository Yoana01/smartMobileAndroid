<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F7FF"
        tools:context=".HomePageParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewParent"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:cardBackgroundColor="#8600B3"
            app:cardCornerRadius="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/woman" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Alex"
            android:textAlignment="center"
            android:textColor="#0C0B0B"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewParent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="My Kids"
            android:textAlignment="center"
            android:textColor="#0C0B0B"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewParent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="230dp"
            android:layout_height="33dp"
            android:layout_marginTop="436dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Contact teacher"
            android:textAlignment="center"
            android:textColor="#0C0B0B"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewParent" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:srcCompat="@drawable/kidscontainer" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewBen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#ABC4FF"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toStartOf="@+id/imageView28"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ben" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Ben"
            android:textColor="#120D0D"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cardViewBen"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="117dp"
            android:layout_height="86dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="208dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Daily \n Task \n Completion"
            android:textAlignment="center"
            android:textColor="#120D0D"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/cardViewBen"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGwen"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#ABC4FF"
            app:cardCornerRadius="250dp"
            app:layout_constraintStart_toStartOf="@+id/imageView28"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:cardCornerRadius="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gwen" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Gwen"
            android:textColor="#120D0D"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/cardViewGwen"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="36dp"
            android:layout_height="199dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/imageView28"
            app:layout_constraintTop_toBottomOf="@+id/cardViewBen"
            app:srcCompat="@drawable/benprogress" />

        <ImageView
            android:id="@+id/gwenProgress"
            android:layout_width="36dp"
            android:layout_height="199dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/imageView28"
            app:layout_constraintTop_toBottomOf="@+id/cardViewBen"
            app:srcCompat="@drawable/gwenprogress" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView2"
            android:layout_width="419dp"
            android:layout_height="65dp"
            android:background="#8600B3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView30">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/personblue" />

            <ImageView
                android:id="@+id/progress"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="328dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/progresstreackicon" />

            <ImageView
                android:id="@+id/content"
                android:layout_width="59dp"
                android:layout_height="match_parent"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/readwhite" />

        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:srcCompat="@drawable/teachercontainer" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="133dp"
            android:layout_height="28dp"
            android:layout_marginTop="512dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Peter Parker"
            android:textAlignment="center"
            android:textColor="#0C0B0B"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewParent" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="133dp"
            android:layout_height="28dp"
            android:layout_marginTop="588dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Abby Peterson"
            android:textAlignment="center"
            android:textColor="#0C0B0B"
            android:textSize="20sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewParent" />

        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView31"
            app:layout_constraintEnd_toEndOf="@+id/imageView31"
            app:srcCompat="@drawable/send" />

        <ImageView
            android:id="@+id/imageView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/imageView31"
            app:layout_constraintTop_toTopOf="@+id/imageView35"
            app:srcCompat="@drawable/person" />

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:srcCompat="@drawable/teachercontainer" />

        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView35"
            app:layout_constraintEnd_toEndOf="@+id/imageView35"
            app:srcCompat="@drawable/send" />

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/imageView31"
            app:layout_constraintTop_toTopOf="@+id/imageView31"
            app:srcCompat="@drawable/person" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>